<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:id="@+id/player_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgPlayerAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:contentDescription="player avatar" />

            <Button
                android:id="@+id/btnChangeAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Change" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Player Name"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPlayerLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trainer Lv. 12"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXP: 120 / 200 to next level"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDefaultMonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active monster:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDefaultMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default Monster (Lv. 5)"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance walked: 2.4 km | Eggs: 1/3"
            android:textSize="13sp"
            android:layout_marginBottom="14dp" />

        <Button
            android:id="@+id/btnCloseStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

