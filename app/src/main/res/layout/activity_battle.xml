<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".battle.ui.BattleActivity">

    <ImageView
        android:id="@+id/imgBattleBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/battle_background"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battleRoot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnRun"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:text="Run"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:text="Capture"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRun" />

    <TextView
        android:id="@+id/tvTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn 1"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/foePanel"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/imgOpponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCapture">

        <ImageView
            android:id="@+id/imgFoeBoxBg"
            android:layout_width="218dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/battle_foe_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineFoeHpStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineFoeHpEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.82" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineFoeHpTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.59" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineFoeHpBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="26dp" />

        <TextView
            android:id="@+id/tvOpponentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Opponent"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/hpOpponent"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginStart="60dp"
            android:background="@android:color/transparent"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/hp_fill_only"
            app:layout_constraintBottom_toTopOf="@+id/guidelineFoeHpTop"
            app:layout_constraintEnd_toStartOf="@id/guidelineFoeHpEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidelineFoeHpStart"
            app:layout_constraintTop_toTopOf="@id/guidelineFoeHpTop" />

        <TextView
            android:id="@+id/tvOpponentHpValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="0/0"
            android:textColor="#111111"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/hpOpponent"
            app:layout_constraintStart_toStartOf="@id/hpOpponent"
            app:layout_constraintEnd_toEndOf="@id/hpOpponent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgOpponent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/foePanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/foePanel"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/tvAnnouncement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Battle Start!"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgOpponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvAnnouncement"
        app:layout_constraintBottom_toTopOf="@id/moveButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playerPanel"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerPanel"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgPlayer">

        <ImageView
            android:id="@+id/imgPlayerBoxBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/battle_player_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinePlayerHpStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.523" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinePlayerHpEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.888" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinePlayerHpTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinePlayerHpBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="38dp" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Player"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelinePlayerHpStart"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/hpPlayer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/hp_fill_only"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/guidelinePlayerHpStart"
            app:layout_constraintEnd_toStartOf="@id/guidelinePlayerHpEnd"
            app:layout_constraintTop_toTopOf="@id/guidelinePlayerHpTop"
            app:layout_constraintBottom_toBottomOf="@id/guidelinePlayerHpBottom" />

        <TextView
            android:id="@+id/tvPlayerHpValue"
            android:layout_width="84dp"
            android:layout_height="21dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="0/0"
            android:textColor="#111111"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guidelinePlayerHpEnd"
            app:layout_constraintStart_toStartOf="@id/guidelinePlayerHpStart"
            app:layout_constraintTop_toBottomOf="@id/hpPlayer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/moveButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/logList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnMove1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:padding="7dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="#7F56F0"
                android:layout_marginEnd="3dp">

                <TextView
                    android:id="@+id/btnMove1Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trailblaze"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moveLeftTextType1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grass"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMove2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:padding="7dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="#7F56F0"
                >

                <TextView
                    android:id="@+id/btnMove2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Move 2"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moveLeftTextType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:id="@+id/btnMove3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:padding="7dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="#7F56F0"
                android:layout_marginEnd="3dp">

                <TextView
                    android:id="@+id/btnMove3Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Move 3"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moveLeftTextType3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnMove4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:padding="7dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="#7F56F0">

                <TextView
                    android:id="@+id/btnMove4Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Move 4"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moveLeftTextType4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/logList"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>