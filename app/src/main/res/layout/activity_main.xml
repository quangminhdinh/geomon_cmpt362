<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Menu"
        android:src="@android:drawable/ic_menu_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/black" />

    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left: tap to open Player Stats -->
        <LinearLayout
            android:id="@+id/player_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/imgPlayer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:contentDescription="player"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Player"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Middle: Inventory (Bag) -->
        <LinearLayout
            android:id="@+id/inventory_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_inventory"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="inventory"
                app:srcCompat="@drawable/ic_pokidex"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:tint="@null" />
        </LinearLayout>

        <!-- Right: default monster quick info -->
        <LinearLayout
            android:id="@+id/monster_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">
            <ImageView
                android:id="@+id/imgMonster"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="monster icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/tvMonsterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DefaultMon"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tvMonsterLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv. 5"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
