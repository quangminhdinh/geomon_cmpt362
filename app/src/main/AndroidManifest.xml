<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication" >

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCw0pql8Ur6ToenD5P6SzPRsyELyz4QtA4" />

        <!-- MainActivity is now the launcher with navigation drawer -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.pokedex.MonsterInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- BattleActivity for battles -->
        <activity
            android:name=".battle.ui.BattleActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- PokedexActivity for viewing captured monsters -->
        <activity
            android:name=".ui.pokedex.PokedexActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Keep MapActivity for legacy support (not launcher) -->
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".ui.bag.BagActivity" />
        <activity android:name=".ui.bag.HealTargetActivity" />

        <!-- TrackingService for location updates -->
        <service
            android:name=".services.tracking.TrackingService"
            android:exported="false" />
    </application>

</manifest>